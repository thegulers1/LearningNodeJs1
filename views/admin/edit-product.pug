extends ../layouts/main-layout.pug 

block styles    
    link(rel="stylesheet" href="../public/css/forms.css")
block content
    form(action="/admin/products" method="POST")
        input#id(type="hidden" name="id" value=`${product.id}`)

        form-group.row.my-3
            label(for="name").col-sm-2.col-form-label Name
            div.col-sm-10
                input(type="text" name="name" value=`${product.name}`).form-control#name
        form-group.row.my-3
            label(for="price").col-sm-2.col-form-label Price
            div.col-sm-10
                input(type="text" name="price" value=`${product.price}`).form-control#price
        form-group.row.my-3
            label(for="image").col-sm-2.col-form-label Image
            div.col-sm-10
                input(type="text" name="image" value=`${product.image}`).form-control#image
        form-group.row.my-3
            label(for="description").col-sm-2.col-form-label Description
            div.col-sm-10
                input(type="text" name="description" value=`${product.description}`).form-control#description           
        form-group.row.my-3
            .col-sm-10.offset-sm-2
                input(type="submit" value="Save Product").btn.btn-primary.my-3




 
         
                       